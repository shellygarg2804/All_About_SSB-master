<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C5"
    tools:context=".Contact_activity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/header"
        android:background="@drawable/contact_top">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/developer_image"
            app:civ_border_color="#FFF9C4"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Abhishek Mishra"
            android:textSize="25dp"

            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:layout_below="@id/logo"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/header"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/gmail_image"
        android:src="@drawable/gmail"/>

    <TextView
        android:id="@+id/gmail_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/header"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/gmail_image"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Mishra695047@gmail.com"
        android:textAlignment="gravity"
        android:textColor="#000"
        android:textSize="18sp" />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="60dp"
        android:id="@+id/insta_image"
        app:civ_border="true"
        app:civ_border_color="#FFF9C4"
        android:layout_height="60dp"
        android:layout_below="@id/gmail_image"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/insta_logo"/>

    <TextView
        android:id="@+id/insta_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/gmail_text"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/insta_image"
        android:text="Mishra_Abhishek_24"
        android:textAlignment="gravity"
        android:textColor="#000"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        />

</RelativeLayout>